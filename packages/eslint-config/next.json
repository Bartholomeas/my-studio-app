{
  "extends": ["eslint:recommended", "prettier", "turbo"],
  "globals": {
    "React": true,
    "JSX": true
  },
  "env": {
    "node": true,
    "browser": true
  },
  "plugins": ["only-warn"],
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": "tsconfig.json"
      }
    }
  },
  "ignorePatterns": [".*.js", "node_modules/"],
  "overrides": [
    {
      "files": ["*.js?(x)", "*.ts?(x)"]
    }
  ]
}
